CC=gcc

all : clean common.o server.o client.o main

#Common
common.o:
	$(CC) -c common/common.c


#Server
group.o: common.o
	$(CC) -c server/group.c

file_transfer_server.o: common.o
	$(CC) -c server/file_transfer_server.c

server.o: group.o file_transfer_server.o
	$(CC) -c server/server.c 


#Client
file_transfer_client.o: common.o
	$(CC) -c client/file_transfer_client.c

client.o: file_transfer_client.o
	$(CC) -c client/client.c


#Main
main: server.o client.o
	$(CC) -o a.out main.c *.o
	rm -f *.o

clean:
	rm -f *.o a.out

